	memset (deadline, 0, sizeof(TIME_TYPE) * maxQueueLength);
    executionTime  = new TIME_TYPE[maxQueueLength];
	memset (executionTime,  0, sizeof(TIME_TYPE) * maxQueueLength);
	_ref_now = 0;
    #ifdef TTS
        __pc = -1;
        __res = 0;
    #endif

